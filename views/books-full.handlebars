<body data-content="books">
    <div class="container-fluid" id="big-container">
        <div class="row align-items-start my-5">
            <div class="col-12 col-md-9">
                {{!-- View button --}}
                <div class="dropdown">
                    <div class="row">
                        <div class="col-12 col-md-10">
                            <h5>Full Database</h5>
                            <div class="small">
                                * Alls book in our database, regardless of your previous actions.
                                <br><em>Note: Any actions you take on this list will override your previous actions.</em>
                            </div>
                        </div>
                        <div class="col col-md-2">
                            {{!-- View button --}} {{> all/view-toggle}}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <form>
                                <div class="form-group">
                                    <label for="bookInput"><strong>Search by author</strong></label>
                                    <input type="text" class="form-control" id="bookInput" placeholder="Enter author here">
                                </div>
                            </form>
                            Want to add a book not in the list?&nbsp
                            <button type="button" class="btn btn-sm" data-toggle="modal" data-target="#addBook">Add
                                book</button>
                        </div>
                    </div>
                </div>
                {{!-- Database flows in here --}}
                {{> books/table-this}}
            </div>
        </div>
    </div>
    {{!-- NextUp list - right sidebar --}}
    {{> books/sidebar}}

    <p class="pl-3 py-1">Go here to see your<a href="/books/nextup"><strong> full list of
                NextUp books</strong></a>.</p>
    </div>
    {{!-- Modal with form to add book --}}
    <div class="modal fade" id="addBook" tabindex="-1" role="dialog" aria-labelledby="addBookLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBookLabel">Add your book</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="bookTitle">Title*</label>
                            <input type="text" class="form-control" id="bookTitle" aria-describedby="bookReq" required>
                            <small id="bookReq" class="form-text text-muted">A book title is required.</small>
                        </div>
                        <div class="form-group">
                            <label for="bookAuthor">Author</label>
                            <input type="text" class="form-control" id="bookAuthor">
                        </div>
                        <span class="small">You can move this book straight to your NextUp or Finished list if you'd like.</span>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="addRadio" id="nextup"
                                value="nextUp">
                            <label class="form-check-label" for="nextup">NextUp</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="addRadio" id="finished"
                                value="finished">
                            <label class="form-check-label" for="finished">Finished</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="addRadio" id="none"
                                value="none">
                            <label class="form-check-label" for="none">No thanks</label>
                        </div>
                        <br>                                              
                        <button type="submit" class="btn btn-small mt-3" id="btn-book" data-dismiss="modal">Add book</button>
                        <button type="button" class="btn btn-small mt-3" data-dismiss="modal">Discard</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>