<body data-content="books">
    <div class="container-fluid" id="big-container">
        <div class="row align-items-start my-5">
            <div class="col-md-9">
                {{!-- View button --}}
                <div class="dropdown mb-3">
                    <div class="row">
                        <div class="col-md-10">
                            <h5>Added</h5>
                            <div class="small">
                                * This view shows every book you've added but haven't interacted with yet.
                            </div>
                        </div>
                        <div class="col-md-2">
                            {{!-- View button --}}
                            {{> all/view-toggle}}
                        </div>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive" id="database">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Title</th>
                                        <th scope="col">Author</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each books}}
                                    <tr>
                                        <th scope="row">{{this.title}}</td>
                                        <td>{{this.author}}</td>
                                        <td id="btn-row">
                                            <button type="image" class="btn btn-sm btn-amazon-books mr-2" data-page="books"
                                                id="{{this.id}}" data-books="{{this.title}}" data-author="{{this.author}}"><i class="fab fa-amazon"></i></button>
                                            <button type="button" class="btn btn-sm btn-nextup-add" data-page="books"
                                                id="{{this.id}}">NextUp</button>
                                            <button type="button" class="btn btn-sm btn-completed-add" data-page="books"
                                                id="{{this.id}}">Finished</button>
                                            <button type="button" class="btn btn-sm btn-remove-add" data-page="books"
                                                id="{{this.id}}">Remove</button></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- NextUp list -right sidebar --}}
            {{> books/sidebar}}

            <p class="pl-3 py-1">Go here to see your<a href="/books/nextup"><strong> full list of NextUp books</strong></a>.</p>
        </div>
    </div>
</body>