<body data-content="books">
    <div class="container-fluid" id="big-container">
        <div class="row align-items-start my-5">
            <div class="col-md-9">
                {{!-- View button --}}
                <div class="dropdown mb-3">
                    <div class="row">
                        <div class="col-md-10">
                            <h5>Finished</h5>
                            <div class="small">
                                * This view shows every book you've read from the list.
                            </div>
                            <div class="mt-3">
                            You've read <strong>{{bookCount}}</strong> out of 523 books on our original list!<br> 
                            You've also read <strong>{{addCount}}</strong> books that you added. 
                            </div>
                        </div>
                        <div class="col-md-2">
                            {{!-- View button --}}
                            {{> all/view-toggle}}
                        </div>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive" id="database">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Rank</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Author</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each books}}
                                    <tr>
                                        <th scope="row">{{Book.rank}}</th>
                                        <td>{{Book.title}}</td>
                                        <td>{{Book.author}}</td>
                                        <td id="btn-row-fn">
                                            <button type="image" class="btn btn-sm btn-amazon-books mr-2" data-page="books"
                                                id="{{this.item}}" data-books="{{Book.title}}"><i class="fab fa-amazon"></i></button>
                                    </tr>
                                    {{/each}}
                                    {{#each add}}
                                    <tr>
                                        <th scope="row"></th>
                                        <td>{{this.title}}</td>
                                        <td>{{this.author}}</td>
                                        <td id="btn-row-fn">
                                            <button type="image" class="btn btn-sm btn-amazon-books mr-2" data-page="books"
                                                id="{{this.id}}" data-books="{{this.title}}"><i class="fab fa-amazon"></i></button>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <div class="small">Books you added will not have a rank.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- NextUp list -right sidebar --}}
            {{> books/sidebar}}

            <p class="pl-3 py-1">Go here to see your<a href="/books/nextup"><strong> full list of NextUp books</strong></a>.</p>
        </div>
    </div>
</body>