<body data-content="books">
    <div class="container-fluid" id="big-container">
        <div class="row my-5">
            <div class="col-12">
                {{!-- View button --}}
                <div class="dropdown mb-3">
                    <div class="row">
                        <div class="col-md-10">
                            <h5>NextUp</h5>
                            <div class="small">
                                * This view shows every book you've marked for NextUp.
                            </div>
                        </div>
                        <div class="col-md-2">
                            {{!-- View button --}}
                            {{> all/view-toggle}}
                        </div>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="row">
    <div class="col-12">
        <div class="table-responsive" id="database">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Rank</th>
                        <th scope="col">Title</th>
                        <th scope="col">Author</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- Items from provided list --}}
                    {{#each books}}
                    <tr>
                        <th scope="row">{{Book.rank}}</th>
                        <td>{{Book.title}}</td>
                        <td>{{Book.author}}</td>
                        <td id="btn-row">
                            <button type="image" class="btn btn-sm btn-amazon-books mr-2" data-page="books"
                                                id="{{this.item}}" data-books="{{Book.title}}" data-author="{{Book.author}}"><i class="fab fa-amazon"></i></button>
                            <button type="button" class="btn btn-sm btn-completed" data-page="books" id="{{this.item}}">Finished</button>
                            <button type="button" class="btn btn-sm btn-remove" data-page="books" id="{{this.item}}">Remove</button></td>
                    </tr>
                    {{/each}}
                    {{!-- Items from user-added --}}
                    {{#each add}}
                    <tr>
                        <th scope="row"></th>
                        <td>{{this.title}}</td>
                        <td>{{this.author}}</td>
                        <td id="btn-row">
                            <button type="image" class="btn btn-sm btn-amazon-books mr-2" data-page="books"
                                                id="{{this.id}}" data-books="{{this.title}}"" data-author="{{this.author}}"><i class="fab fa-amazon"></i></button>
                            <button type="button" class="btn btn-sm btn-completed-add" data-page="books" id="{{this.id}}">Finished</button>
                            <button type="button" class="btn btn-sm btn-remove-add" data-page="books" id="{{this.id}}">Remove</button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="small">Books you added will not have a rank.
            </div>
        </div>
            </div>
        </div>
    </div>
</body>