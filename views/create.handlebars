<div class="container mt-5">
    <div class="row">
        <div class="col-11 col-sm-9 col-md-8 col-lg-7 col-xl-6 mx-auto" id="login-container">
            <form class="signup my-4 mx-3">
                <form class="signup">
          <div class="form-group">
              <h4 id="notFilled"></h4>
              <h4 id="alreadyTaken"></h4>
              <!-- email input -->
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="emailInput" placeholder="Email">
          </div>
          <div class="form-group">
              <!-- password input -->
            <label for="password">Password</label>
            <input type="password" class="form-control" id="passwordInput" placeholder="Password">
          </div>
          <div class="form-group">
              <!-- name input -->
            <label for="inputName">Name</label>
            <input type="text" class="form-control" id="nameInput" placeholder="John Doe">
          </div>
          <div class="form-group">
              <!-- user name input -->
            <label for="inputUserName">Desired user name</label>
            <input type="text" class="form-control" id="userNameInput" placeholder="JohnDoe123">
          </div>
          <!-- error -->
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error: Please fill out all forms</span> <span class="msg"></span>
          </div>
          <button type="submit" class="btn btn-default" id="create">Create Your Account</button>
        </form>
                <p class="mt-2">Already have an account? <a href="/login">Log in here</a></p>
            </form>
        </div>
    </div>
</div>