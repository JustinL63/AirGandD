<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-5 mx-auto" id="login-container">
            <form class="signup my-4 mx-3">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email-input" aria-describedby="emailHelp"
                        placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary border-0">Create an Account</button>
                <p class="mt-2">Already have an account? <a href="/login">Log in here</a></p>
            </form>
        </div>
    </div>
</div>