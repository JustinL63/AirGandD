<div class="container mt-5">
    <div class="row">
        <div class="col-11 col-sm-9 col-md-8 col-lg-7 col-xl-6 mx-auto" id="login-container">
            <form class="signup my-4 mx-3">
                <h6 id="alreadyTaken"></h6>
                <div class="form-group">
                    <!-- email input -->
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="emailInput" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <!-- password input -->
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="passwordInput" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <!-- name input -->
                    <label for="inputName">Name</label>
                    <input type="text" class="form-control" id="nameInput" placeholder="John Doe" required>
                </div>
                <div class="form-group">
                    <!-- user name input -->
                    <label for="inputUserName">Desired user name</label>
                    <input type="text" class="form-control" id="userNameInput" placeholder="JohnDoe123" required>
                </div>
                <button type="submit" class="btn btn-primary border-0" id="create">Create Your Account</button>
                <p class="mt-2">Already have an account? <a href="/login">Log in here</a></p>
            </form>
        </div>
    </div>
</div>