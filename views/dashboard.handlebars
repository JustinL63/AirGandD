{{!-- Three vertical sections --}}
<body id="dash-pg">
    <div class="container mt-5 mb-4" id="dash-container">
        <div class="row">
            {{!-- Music column - data from database coming in --}}
            <div class="col-12 col-md-4" id="music-col">
                <h3 class="py-2 border-bottom border-white">Music</h3>
                {{#each albums}}
                <h5 class="pt-2">{{Album.album}}</h5>
                <p class="mb-2" id="subline">{{Album.artist}} — {{Album.Year}}</p>
                <div class="border-bottom border-white pb-2 mb-2">
                    {{!-- Button to mark as listened to --}}
                    <button type="button" class="btn btn-sm completed" id="{{Album.id}}">Listened to</button>
                    {{!-- Button to remove --}}
                    <button type="button" class="btn btn-sm ml-2 remove" id="{{Album.id}}">Remove</button>
                </div>
                {{/each}}
            </div>

            {{!-- Film column --}}
            <div class="col-12 col-md-4" id="films-col">
                <h3 class="py-2 border-bottom border-white">Films</h3>
                {{#each albums}}
                <h5 class="pt-2">{{Album.album}}</h5>
                <p class="mb-2" id="subline">{{Album.artist}} — {{Album.Year}}</p>
                <div class="border-bottom border-white pb-2 mb-2">
                    {{!-- Button to mark as listened to --}}
                    <button type="button" class="btn btn-sm completed" id="{{Album.id}}">Listened to</button>
                    {{!-- Button to remove --}}
                    <button type="button" class="btn btn-sm ml-2 remove" id="{{Album.id}}">Remove</button>
                </div>
                {{/each}}
            </div>

            {{!-- Books column --}}
            <div class="col-12 col-md-4" id="books-col">
                <h3 class="py-2 border-bottom border-white">Books</h3>
                {{#each albums}}
                <h5 class="pt-2">{{Album.album}}</h5>
                <p class="mb-2" id="subline">{{Album.artist}} — {{Album.Year}}</p>
                <div class="border-bottom border-white pb-2 mb-2">
                    {{!-- Button to mark as listened to --}}
                    <button type="button" class="btn btn-sm completed" id="{{Album.id}}">Listened to</button>
                    {{!-- Button to remove --}}
                    <button type="button" class="btn btn-sm ml-2 remove" id="{{Album.id}}">Remove</button>
                </div>
                {{/each}}            
            </div>
        </div>
    </div>
</body>