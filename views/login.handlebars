<div class="container mt-5">
    <div class="row">
        <div class="col-11 col-sm-9 col-md-8 col-lg-7 col-xl-6 mx-auto" id="login-container">
            <form class="login my-4 mx-3">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email-input" aria-describedby="emailHelp"
                        placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary border-0">Log in</button>
                <p class="mt-2">Don't have an account? <a href="/create">Create one here</a></p>
            </form>
        </div>
    </div>
</div>