<body data-content="movies">
    <div class="container-fluid" id="big-container">
        <div class="row align-items-start my-5">
            <div class="col-12 col-md-9">
                {{!-- View button --}}
                <div class="dropdown">
                    <div class="row">
                        <div class="col-12 col-md-10">
                            <h5>Full Database</h5>
                            <div class="small">
                                * All movies in our database, regardless of your previous actions.
                                <br><em>Note: Any actions you take on this list will override your previous actions.</em>
                            </div>
                        </div>
                        <div class="col col-md-2">
                            {{!-- View button --}} {{> all/view-toggle}}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <form>
                                <div class="form-group">
                                    <label for="movieInput"><strong>Search by title</strong></label>
                                    <input type="text" class="form-control" id="movieTitleSearchFilter" placeholder="Enter title here">
                                </div>
                            </form>
                            Want to add a movie not in the list?&nbsp
                            <button type="button" class="btn btn-sm" data-toggle="modal" data-target="#addMovie">Add
                                Movie</button>
                        </div>
                    </div>
                </div>
                {{!-- Database flows in here --}}
                {{> movies/table-this}}
            </div>
        </div>
    </div>
    {{!-- NextUp list - right sidebar --}}
    {{> movies/sidebar}}

    <p class="pl-3 py-1">Go here to see your<a href="/movies/nextup"><strong> full list of
                NextUp movies</strong></a>.</p>
    </div>
    {{!-- Modal with form to add movie --}}
    <div class="modal fade" id="addMovie" tabindex="-1" role="dialog" aria-labelledby="addMovieLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMovieLabel">Add your movie</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="movieTitle">Movie*</label>
                            <input type="text" class="form-control" id="movieTitle" aria-describedby="movieReq" required>
                            <small id="movieReq" class="form-text text-muted">An movie title is required.</small>
                        </div>
                        <div class="form-group">
                            <label for="movieYear">Year</label>
                            <input type="text" class="form-control" id="movieYear">
                        </div>
                        <div class="form-group">
                            <label for="movieRating">Rating</label>
                            <input type="text" class="form-control" id="movieRating">
                        </div>
                        <span class="small">You can move this movie straight to your NextUp or Finished list if you'd like.</span>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="addRadio" id="nextup"
                                value="nextUp">
                            <label class="form-check-label" for="nextup">NextUp</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="addRadio" id="finished"
                                value="finished">
                            <label class="form-check-label" for="finished">Finished</label>
                        </div>
                        <br>                                               
                        <button type="submit" class="btn btn-small mt-3" id="btn-movie" data-dismiss="modal">Add movie</button>
                        <button type="button" class="btn btn-small mt-3" data-dismiss="modal">Discard</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>