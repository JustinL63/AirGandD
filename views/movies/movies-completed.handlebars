<body data-content="movies">
    <div class="container-fluid" id="big-container">
        <div class="row align-items-start my-5">
            <div class="col-md-9">
                {{!-- View button --}}
                <div class="dropdown mb-3">
                    <div class="row">
                        <div class="col-md-10">
                            <h5>Finished</h5>
                            <div class="small">
                              * This view shows every movie you've watched from the list.
                            </div>
                            <div class="mt-3">
                            You've watched <strong>{{movieCount}}</strong> out of 1,234 movies on our original list!<br>
                            You've also watched <strong>{{addCount}}</strong> movies that you've added.
                            </div>
                        </div>
                        <div class="col-md-2">
                            {{!-- View button --}}
                            {{> all/view-toggle}}
                        </div>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="row">
    <div class="col-12">
        <div class="table-responsive" id="database">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Rank</th>
                        <th scope="col">Title</th>
                        <th scope="col">Year</th>
                        <th scope="col">Rating</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each movies}}
                    <tr>
                        <th scope="row">{{Movie.rank}}</th>
                        <td>{{Movie.title}}</td>
                        <td>{{Movie.year}}</td>
                        <td>{{Movie.rating}}</td>
                        <td id="btn-row-fn">
                            <button type="image" class="btn btn-sm btn-amazon-movies mr-2" data-page="movies" id="{{this.item}}" data-movie="{{Movie.title}}"><i class="fab fa-amazon"></i></button>        
                    </tr>
                    {{/each}}
                    {{#each add}}
                    <tr>
                        <th scope="row"></th>
                        <td>{{this.title}}</td>
                        <td>{{this.year}}</td>
                        <td>{{this.rating}}</td>
                        <td id="btn-row-fn">
                            <button type="image" class="btn btn-sm btn-amazon-movies mr-2" data-page="movies" id="{{this.id}}" data-movie="{{this.title}}"><i class="fab fa-amazon"></i></button>        
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="small">Movies you added will not have a rank.
            </div>
        </div>
            </div>
        </div>
    </div>

            {{!-- NextUp list -right sidebar --}}
            {{> movies/sidebar}}

                <p class="pl-3 py-1">Go here to see your<a href="/movies/nextup"><strong> full list of NextUp movies</strong></a>.</p>
            </div>
        </div>
</body>