<body data-content="movies">
    <div class="container-fluid" id="big-container">
        <div class="row my-5">
            <div class="col-12">
                {{!-- View button --}}
                <div class="dropdown mb-3">
                    <div class="row">
                        <div class="col-md-10">
                            <h5>NextUp</h5>
                            <div class="small">
                                * This view shows every movie you've marked for NextUp.
                            </div>
                        </div>
                        <div class="col-md-2">
                            {{!-- View button --}}
                            {{> all/view-toggle}}
                        </div>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="row">
    <div class="col-12">
        <div class="table-responsive" id="database">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Rank</th>
                        <th scope="col">Title</th>
                        <th scope="col">Year</th>
                        <th scope="col">Rating</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- Movies selected from list --}}
                    {{#each movies}}
                    <tr>
                        <th scope="row">{{Movie.rank}}</th>
                        <td>{{Movie.title}}</td>
                        <td>{{Movie.year}}</td>
                        <td>{{Movie.rating}}</td>
                        <td id="btn-row">
                            <button type="image" class="btn btn-sm btn-amazon-movies mr-2" data-page="movies" id="{{this.item}}"
                                data-movie="{{Movie.title}}"><i class="fab fa-amazon"></i></button>                            
                            <button type="button" class="btn btn-sm btn-completed" data-page="movies" id="{{this.item}}">Finished</button>
                            <button type="button" class="btn btn-sm btn-remove" data-page="movies" id="{{this.item}}">Remove</button></td>
                    </tr>
                    {{/each}}
                    {{!-- Movies added by user --}}
                    {{#each add}}
                    <tr>
                        <th scope="row"></th>
                        <td>{{this.title}}</td>
                        <td>{{this.year}}</td>
                        <td>{{this.rating}}</td>
                        <td id="btn-row">
                            <button type="image" class="btn btn-sm btn-amazon-movies mr-2" data-page="movies" id="{{this.id}}"
                                data-movie="{{this.title}}"><i class="fab fa-amazon"></i></button>                            
                            <button type="button" class="btn btn-sm btn-completed-add" data-page="movies" id="{{this.id}}">Finished</button>
                            <button type="button" class="btn btn-sm btn-remove-add" data-page="movies" id="{{this.id}}">Remove</button></td>
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
            <div class="small">Movies you added will not have a rank.
            </div>
        </div>
            </div>
        </div>
    </div>
</body>