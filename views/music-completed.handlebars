<body data-content="music">
    <div class="container-fluid" id="big-container">
        <div class="row align-items-start my-5">
            <div class="col-md-9">
                {{!-- View button --}}
                <div class="dropdown mb-3">
                    <div class="row">
                        <div class="col-md-10">
                            <h5>Listened To</h5>
                            <div class="small">
                              * This view shows every album you've listened to from the list.
                            </div>
                        </div>
                        <div class="col-md-2">
                            {{!-- View button --}}
                            {{> all/view-toggle}}
                        </div>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="table-responsive mt-3" id="database">
                    <table class="table">
                        <thead>
                            <tr class="d-flex">
                                <th scope="col" class="col-2">Rank</th>
                                <th scope="col" class="col-4">Album</th>
                                <th scope="col" class="col-4">Artist</th>
                                <th scope="col" class="col-2">Year</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each albums}}
                            <tr class="d-flex">
                                <th scope="row" class="col-2">{{Album.rank}}</th>
                                <td class="col-4">{{Album.album}}</td>
                                <td class="col-4">{{Album.artist}}</td>
                                <td class="col-2">{{Album.Year}}</td>        
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

            {{!-- NextUp list -right sidebar --}}
            <div class="col-md-3 px-0 border" id="sidebar-music">
                <h3 class="p-3" id="bar">NextUp</h3>
                {{!-- Bring in sidebar partial --}}
                {{#each dashboard}}
                {{> music/sidebar}}
                {{/each}}

                <p class="pl-3 py-1">Go here to see your<a href="/api/music/nextup"><strong> full list of NextUp albums</strong></a>.</p>
            </div>
        </div>
</body>