<body data-content="music">
    <div class="container-fluid" id="big-container">
        <div class="row align-items-start my-5">
            <div class="col-12 col-md-9">
                {{!-- View button --}}
                <div class="row">
                    <div class="col-12 col-md-10">
                        <h5>Full Database</h5>
                        <div class="small">
                            * All albums in our database, regardless of your previous actions.
                            <br><em>Note: Any actions you take on this list will override your previous actions.</em>
                        </div>
                    </div>
                    <div class="col col-md-2">
                        {{!-- View button --}} {{> all/view-toggle}}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <form>
                            <div class="form-group">
                                <label for="musicInput"><strong>Search by artist</strong></label>
                                <input type="text" class="form-control" id="musicInput" placeholder="Enter artist here">
                                {{!-- add model that lets you create your own albums --}}
                            </div>
                        </form>
                        Want to add an album not in the list?&nbsp
                        <button type="button" class="btn btn-sm" data-toggle="modal" data-target="#addAlbum">Add
                            album</button>
                    </div>
                </div>
                {{!-- Database flows in here --}} {{> music/table-this}}
            </div>
        </div>
    </div>
    {{!-- NextUp list - right sidebar --}} {{> music/sidebar}}

    <p class="pl-3 py-1">Go here to see your
        <a href="/music/nextup">
            <strong> full list of NextUp albums</strong>
        </a>.</p>
    </div>

    {{!-- Modal with form to add album --}}
    <div class="modal fade" id="addAlbum" tabindex="-1" role="dialog" aria-labelledby="addAlbumLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAlbumLabel">Add your album</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group added-music-form">
                            <label for="albumTitle">Title*</label>
                            <input type="text" class="form-control" id="albumTitle" aria-describedby="albumReq"
                                required>
                            <small id="albumReq" class="form-text text-muted">An album title is required.</small>
                        </div>
                        <div class="form-group">
                            <label for="albumArtist">Artist</label>
                            <input type="text" class="form-control" id="albumArtist">
                        </div>
                        <div class="form-group">
                            <label for="albumYear">Year</label>
                            <input type="text" class="form-control" id="albumYear">
                        </div>
                        <span class="small">You can move this album straight to your NextUp or Finished list if you'd like.</span>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="addRadio" id="nextup"
                                value="nextUp">
                            <label class="form-check-label" for="nextup">NextUp</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="addRadio" id="finished"
                                value="finished">
                            <label class="form-check-label" for="finished">Finished</label>
                        </div>
                        <br>

                        <button type="submit" class="btn btn-small mt-3" id="btn-album" data-dismiss="modal">Add album</button>
                        <button type="button" class="btn btn-small mt-3" data-dismiss="modal">Discard</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>