<body id="music-pg">
    <div class="container-fluid" id="big-container">
        <div class="row mb-5">
            {{!-- Explanation text for using the database --}}
            <div class="col-md-9">
                <div class="mt-5">
                    <div class="accordion" id="current-view">
                        <div class="card">
                            <div class="card-header instruct-header" id="headingOne">
                                <button class="btn btn-link text-dark font-weight-bold" id="btn-accordion" type="button"
                                    data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
                                    aria-controls="collapseOne">
                                    Your Current View
                                </button>
                            </div>

                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#current-view">
                                <div class="card-body instruct-body">
                                    All the albums in the database,
                                    including ones
                                    you
                                    previously removed. Fifty viewed at a time. <em>Note: This list does not include
                                        any customizing you may have done.</em></li>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header instruct-header" id="headingThree">
                                <h5 class="mb-0">
                                    <button class="btn btn-link collapsed text-dark font-weight-bold" id="btn-accordion"
                                        type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false"
                                        aria-controls="collapseThree">
                                        Other Views Available
                                    </button>
                                </h5>
                            </div>
                            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#current-view">
                                <div class="card-body instruct-body">
                                    <ul>
                                        <li><strong>View Remaining:</strong> The remaining albums that you haven't
                                            marked yet. Fifty viewed at a time.</li>
                                        <li><strong>NextUp:</strong> Albums that you want to listen to. You can also
                                            see your next
                                            few albums in the sidebar on the right.</li>
                                        <li><strong>Listened To:</strong> The albums from the list you've already
                                            listened to.</li>
                                    </ul>
                                    <div class="dropdown ml-3">
                                        <button class="btn btn-secondary border-0 dropdown-toggle" type="button" id="db-list"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Select your list
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="db-list">
                                            <button class="dropdown-item" type="button" id="view-all">View Remaining</a>
                                                <button class="dropdown-item" type="button" id="next-up">NextUp</a>
                                                    <button class="dropdown-item" type="button" id="full-db">Listened
                                                        To</a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="table-responsive mt-3" id="database">
                    <table class="table">
                        <thead>
                            <tr class="d-flex">
                                <th scope="col" class="col-1">Rank</th>
                                <th scope="col" class="col-3">Album</th>
                                <th scope="col" class="col-3">Artist</th>
                                <th scope="col" class="col-1">Year</th>
                                <th scope="col" class="col-4"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each albums}}
                            <tr class="d-flex">
                                <th scope="row" class="col-1">{{this.rank}}</th>
                                <td class="col-3">{{this.album}}</td>
                                <td class="col-3">{{this.artist}}</td>
                                <td class="col-1">{{this.Year}}</td>
                                <td class="col-4"><button type="button" class="btn btn-sm btn-nextup" id="{{this.id}}">NextUp</button>
                                    <button type="button" class="btn btn-sm btn-completed" id="{{this.id}}">Listened to</button>
                                    <button type="button" class="btn btn-sm btn-remove" id="{{this.id}}">Remove</button></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-sm" id="more">Show Me More</button>
                </div>
            </div>
            {{!-- NextUp list -right sidebar --}}
            <div class="col-md-3 mt-5 px-0 border" id="sidebar">
                <h3 class="p-3" id="bar">NextUp</h3>
                <div class="px-3">
                    <h5 class="pt-2">Pet Sounds</h5>
                    <p class="mb-2">The Beach Boys — 1966</p>
                    <div class="border-bottom border-white pb-2 mb-2">
                        <button type="button" class="btn btn-sm" id="completed">Listened to</button>
                    </div>
                    <h5 class="pt-2">Revolver</h5>
                    <p class="mb-2">The Beatles — 1966</p>
                    <div class="border-bottom border-white pb-2 mb-2">
                        <button type="button" class="btn btn-sm" id="completed">Listened to</button>
                    </div>
                    <h5 class="pt-2">Nevermind</h5>
                    <p class="mb-2">Nirvana — 1991</p>
                    <div class="border-bottom border-white pb-2 mb-2">
                        <button type="button" class="btn btn-sm" id="completed">Listened to</button>
                    </div>
                </div>
            </div>
        </div>
</body>