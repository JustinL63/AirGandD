<body id="music-nextup-pg">
    <div class="container-fluid" id="big-container">
        <div class="row my-5">
            <div class="col-12">
                {{!-- View button --}}
                <div class="dropdown mb-3">
                    <button class="btn btn-secondary border-0 dropdown-toggle" type="button" id="db-list" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        NextUp
                    </button>
                    <div class="dropdown-menu" aria-labelledby="db-list">
                        <button class="dropdown-item" type="button" id="view-all">Remaining</a>
                            <button class="dropdown-item" type="button" id="listened-to">Listened
                                To</a>
                                <button class="dropdown-item" type="button" id="full-db">Full
                                    Database</a>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="table-responsive mt-3" id="database">
                    <table class="table">
                        <thead>
                            <tr class="d-flex">
                                <th scope="col" class="col-1">Rank</th>
                                <th scope="col" class="col-4">Album</th>
                                <th scope="col" class="col-4">Artist</th>
                                <th scope="col" class="col-1">Year</th>
                                <th scope="col" class="col-2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each albums}}
                            <tr class="d-flex">
                                <th scope="row" class="col-1">{{Album.rank}}</th>
                                <td class="col-4">{{Album.album}}</td>
                                <td class="col-4">{{Album.artist}}</td>
                                <td class="col-1">{{Album.Year}}</td>
                                <td class="col-2">
                                    <button type="button" class="btn btn-sm btn-nx-completed" id="{{this.id}}" data-page="music">Listened to</button>
                                    <button type="button" class="btn btn-sm btn-nx-remove" id="{{this.id}}" data-page="music">Remove</button></td>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>          
        </div>
    </div>
</body>