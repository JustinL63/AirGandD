<body data-content="music">
    <div class="container-fluid" id="big-container">
        <div class="row align-items-start my-5">
            <div class="col-md-9">
                {{!-- View button --}}
                <div class="dropdown mb-3">
                    <div class="row">
                        <div class="col-md-10">
                            <h5>Finished</h5>
                            <div class="small">
                              * This view shows every album you've listened to from the list.
                            </div>
                            <div class="mt-3">
                            You've listened to <strong>{{albumCount}}</strong> out of 3,000 albums on our original list!<br> 
                            You've also listened to <strong>{{addCount}}</strong> albums that you've added. 
                            </div>
                        </div>
                        <div class="col-md-2">
                            {{!-- View button --}}
                            {{> all/view-toggle}}
                        </div>
                    </div>
                </div>
                {{!-- Database data flows in here--}}
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive" id="database">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Rank</th>
                                        <th scope="col">Album</th>
                                        <th scope="col">Artist</th>
                                        <th scope="col">Year</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each albums}}
                                    <tr>
                                        <th scope="row">{{Album.rank}}</th>
                                        <td>{{Album.album}}</td>
                                        <td>{{Album.artist}}</td>
                                        <td>{{Album.Year}}</td>
                                        <td id="btn-row-fn">
                                            <button type="image" class="btn btn-sm btn-amazon-music mr-2" data-page="music" id="{{this.item}}" data-album="{{Album.album}}"><i class="fab fa-amazon"></i></button>
                                    </tr>
                                    {{/each}}
                                    {{#each add}}
                                    <tr>
                                        <th scope="row"></th>
                                        <td>{{this.album}}</td>
                                        <td>{{this.artist}}</td>
                                        <td>{{this.year}}</td>
                                        <td id="btn-row-fn">
                                            <button type="image" class="btn btn-sm btn-amazon-music mr-2" data-page="music" id="{{this.id}}" data-album="{{this.album}}"><i class="fab fa-amazon"></i></button>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <div class="small">Albums you added will not have a rank.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
    

            {{!-- NextUp list -right sidebar --}}
            {{> music/sidebar}}

                <p class="pl-3 py-1">Go here to see your<a href="/music/nextup"><strong> full list of NextUp albums</strong></a>.</p>
            </div>
        </div>
</body>