                            <button type="button" class="btn btn-sm btn-completed" data-page="music" id="{{this.id}}">Listened
                                to</button>
                            <button type="button" class="btn btn-sm btn-remove" data-page="music" id="{{this.id}}">Remove</button></td>
                    </tr>
                    {{/each}}
